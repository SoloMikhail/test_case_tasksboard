<h2 class="mb-4">Tasks</h2>

<%= link_to 'New task', new_job_path, class: 'btn btn-primary btn-lg' %>

<% @jobs.each do |job| %>
  <article class="card mt-3">
    <div class="card-body">
      <h4><%= job.title %></h2>

      <section class="card-text">
        <time datetime="<%= job.formated_created_at %>">
          <small><%= job.formated_created_at %></small>
        </time>

        <p class="my-2">
          <%= job.content%>
        </p>

        <p class="my-2">
          <%= job.status%>
        </p>

        <p class="my-2">
          <%= job.estimation%>
        </p>

        <p class="my-2">
          <%= job.start_date%>
        </p>

        <p class="my-2">
          <%= job.due_date%>
        </p>
       </section>

    <%= link_to 'Show', job_path(job), class: 'btn btn-primary' %>
    <%= link_to 'Edit', edit_job_path(job), class: 'btn btn-secondary' %>
    <%= link_to "Destroy", job_path(job), class: 'btn btn-danger', data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
    </div>
  </article>
<% end %>
