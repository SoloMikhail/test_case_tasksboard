<h1>Tasks</h1>

<% @jobs.each do |job| %>
  <h2> <%= job.title  %> </h2>

  <h3> <%= job.content%> </h3>

  <h3> <%= job.status%> </h3>

  <h3> <%= job.estimation%> </h3>

  <h3> <%= job.start_date%> </h3>

  <h3> <%= job.due_date%> </h3>

  <time datetime="<%= job.formated_created_at %>">
    <%= job.formated_created_at %>
    </time>

  <p>
    <%= job.content%>
    <br>
    <%= link_to 'Show', job_path(job)%> |
    <%= link_to 'Edit', edit_job_path(job)%> |

  </p>
<% end %>
