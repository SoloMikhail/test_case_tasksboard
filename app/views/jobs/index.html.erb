<h1>Tasks</h1>

<% @jobs.each do |job| %>
  <h2> <%= job.title  %> </h2>

  <h4> <%= job.content%> </h4>

  <h4> <%= job.status%> </h4>

  <h4> <%= job.estimation%> </h4>

  <h4> <%= job.start_date%> </h4>

  <h4> <%= job.due_date%> </h4>

  <time datetime="<%= job.formated_created_at %>">
    <%= job.formated_created_at %>
    </time>

  <p>
    <%= job.content%>
    <br>
    <%= link_to 'New', new_job_path(job) %> |
    <%= link_to 'Show', job_path(job) %> |
    <%= link_to 'Edit', edit_job_path(job) %> |
    <%= link_to "Destroy", job_path(job), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
  </p>
<% end %>
